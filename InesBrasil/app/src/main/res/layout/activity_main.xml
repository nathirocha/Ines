<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rochanathalia.eti.br.inesbrasil.MainActivity"
    android:weightSum="4">


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:background="@drawable/ines1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/btn_ines1" />

        <Button
            android:layout_weight="1"
            android:background="@drawable/ines2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/btn_ines2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/ines3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/btn_ines3"
            android:layout_weight="1"/>

        <Button
            android:background="@drawable/ines4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:id="@+id/btn_ines4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ines5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:id="@+id/btn_ines5" />

        <Button
            android:background="@drawable/ines6"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/btn_ines6"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ines7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:id="@+id/btn_ines7" />

        <Button
            android:background="@drawable/ines8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:id="@+id/btn_ines8"/>


    </LinearLayout>
</LinearLayout>
